<Page x:Class="DedicatedClient.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DedicatedClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <StackPanel HorizontalAlignment="Center">
        <Label Content="Login" HorizontalAlignment="Center"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Username"/>
            <TextBox Grid.Row="0" Grid.Column="1" Width="69" Name="txtUsername" KeyDown="txtUsername_KeyDown"/>
            <Label Grid.Row="1" Grid.Column="0" Content="Password"/>
            <PasswordBox Grid.Row="1" Grid.Column="1" Width="69" Name="txtPassword"/>
        </Grid>
        <Button Content="Login" Click="Button_Click"/>
    </StackPanel>
</Page>
